    "gravatar": "^1.8.2",
    "http-status-codes": "^2.2.0",
    "mongoose": "^6.6.5",
    "request": "^2.88.2",
    "typescript": "^4.8.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/config": "3.3.0",
    "@types/express": "^4.17.14",
    "@types/gravatar": "^1.8.3",
    "@types/mongoose": "^5.11.97",
    "concurrently": "^7.4.0",
    "nodemon": "^3.0.1"
  }
}
